<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping> 
	<class name="bean.security.RecordingCommentUserActivity" table="useractivity"> 
		<id name="id" column="id">
        	<generator class="identity" />
      	</id> 
		
		<property name="user" column="user" />
		<property name="time" column="time" />
		
		<many-to-one name="recordingComment" class="bean.RecordingComment">
          <column name="recordingcommentfk" />
      	</many-to-one>		
	</class>
</hibernate-mapping>
